<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Generic - Debug"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
  <description>
Javascript related checking options. Show in general not be needed for phpcs. The named tools have to be installed for these sniffs to work.
  </description>

  <rule name="ClosureLinter" class="Generic_Sniffs_Debug_ClosureLinterSniff">
    <description>
Runs 'gjslint' on your javascript files.
    </description>
  </rule>
  <rule name="JSHint" class="Generic_Sniffs_Debug_JSHintSniff">
    <description>
      Runs 'jshint' on your javascript files.
    </description>
  </rule>
  <rule name="CSSLint" class="Generic_Sniffs_Debug_CSSLintSniff">
    <description>
      Runs 'csslint' on your css files.
    </description>
  </rule>
</ruleset>
